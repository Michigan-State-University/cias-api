{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "type": "object",
  "properties": {
    "settings": {
      "type": "object",
      "properties": {
        "voice": {
          "type": "boolean"
        },
        "animation": {
          "type": "boolean"
        },
        "character": {
          "type": "string"
        },
        "extra_space_for_narrator": {
          "type": "boolean"
        }
      },
      "required": [
        "voice",
        "animation",
        "character"
      ]
    },
    "blocks": {
      "type": "array",
      "items": {}
    }
  },
  "required": [
    "settings",
    "blocks"
  ]
}

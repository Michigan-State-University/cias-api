UPDATE
 <%= @table %>
SET
  position = nv.position
FROM
  (
    VALUES
      <% @values.each do |value| %>
        ('<%= value[:id] %>', <%= value[:position] %>)
          <%= ',' if value[:id] != @values.last[:id] %>
      <% end %>
    ) AS nv (id, position)
WHERE
  <%= @table %>.id = nv.id::uuid;
